<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/detailsTextView"
        android:layout_width="278dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Fill out your details"
        android:textColor="#004aad"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sn1"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/custom_dialog"
        android:text="1"
        android:textColor="#0B0A0A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/companyNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="156dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Company Name"
        android:textColor="#004aad"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sn1"
        app:layout_constraintTop_toBottomOf="@+id/detailsTextView" />

    <EditText
        android:id="@+id/companyNameEditText"
        android:layout_width="221dp"
        android:layout_height="49dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your company name."
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyNameText" />

    <Button
        android:id="@+id/next1"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_dialog"
        android:backgroundTint="#004aad"
        android:onClick="next1clicked"
        android:tag="1"
        android:text="Next"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsTextView" />

    <Button
        android:id="@+id/sn2"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_dialog"
        android:text="2"
        android:textColor="#0B0A0A"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyNameEditText" />

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="220dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Password"
        android:textColor="#004aad"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sn2"
        app:layout_constraintTop_toBottomOf="@+id/companyNameEditText" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="279dp"
        android:layout_height="46dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your admin login password"
        android:inputType="textPassword"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText" />

    <Button
        android:id="@+id/next2"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_dialog"
        android:backgroundTint="#004aad"
        android:onClick="next2clicked"
        android:tag="2"
        android:text="Next"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next1" />

    <Button
        android:id="@+id/sn3"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_dialog"
        android:text="3"
        android:textColor="#0B0A0A"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

    <EditText
        android:id="@+id/companyEmailEditText"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter your company email address"
        android:inputType="textEmailAddress"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sn3" />

    <Button
        android:id="@+id/next3"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_dialog"
        android:backgroundTint="#004aad"
        android:onClick="next3clicked"
        android:tag="3"
        android:text="Next"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next2" />

    <Button
        android:id="@+id/sn4"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_dialog"
        android:text="4"
        android:textColor="#0B0A0A"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyEmailEditText" />

    <TextView
        android:id="@+id/companyEmailText"
        android:layout_width="283dp"
        android:layout_height="37dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="167dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Company Email Address"
        android:textColor="#004aad"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toEndOf="@+id/sn3"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

    <TextView
        android:id="@+id/contactPersonText"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="164dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Contact Person Name"
        android:textColor="#004aad"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toEndOf="@+id/sn4"
        app:layout_constraintTop_toBottomOf="@+id/companyEmailEditText" />

    <EditText
        android:id="@+id/contactPersonEditText"
        android:layout_width="248dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Enter contact person's name"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sn4" />

    <Button
        android:id="@+id/next4"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_dialog"
        android:backgroundTint="#004aad"
        android:onClick="next4clicked"
        android:tag="4"
        android:text="Done"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next3" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="291dp"
        android:layout_height="17dp"
        android:layout_marginTop="4dp"
        android:text="*Password must be of minimum 6 characters"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>
